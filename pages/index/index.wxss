.page__hd{
  width: 100%;
  height: 130rpx;
  background: #b9d46e;
  box-sizing: border-box;
  overflow: hidden;
}
.page__hd_search {
  width: 100%;
  height: 80rpx;
  margin-top: 25rpx;
  box-sizing: border-box;
}
.page__hd_search__left {
  width: 440rpx;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
  box-sizing: border-box;
  background-color: #c7ec55;
  border: 1rpx solid #aad41e;
  overflow: hidden;
}
.page__hd_search__right {
  position: absolute;
  width: 280rpx;
  height: 80rpx;
  border-radius: 40rpx;
  box-sizing: border-box;
  background-color: #c7ec55;
  border: 1rpx solid #aad41e;
  right: 0;
  top: 25rpx;
  font-size: 32rpx;
}
.page__hd_search__left image{
  width: 38rpx;
  height: 44rpx;
  margin-left: 10rpx;
}
.swiper-tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.swiper-tab-item{
  flex:1;
  text-align: center;
  font-size: 32rpx;
  height: 90rpx;
  color: #999999;
  line-height: 90rpx;
 
}

.active{
  color:#f65959; 
  border-bottom: 5rpx solid #aad41e;
}

swiper{
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
  height: 800rpx;
}
swiper-item{
  overflow-y:scroll;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #d44141;
  text-align: center;

}

.modal-content {
  width: 100%;
  height: 120rpx;
  padding: 50rpx 32rpx;
}

.modal-content__left image {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
}

.modal-content__right {
  position: absolute;
  width: 350rpx;
  height: 120rpx;
  overflow: hidden;
  top: 158rpx;
  left: 160rpx;
  font-size: 40rpx;
  line-height: 40rpx;
}

.modal-content__right image {
  width: 60rpx;
  height: 60rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}